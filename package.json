{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "dev:element1": "lerna exec --scope @qinzhiwei1993/element1 -- npm run dev",
    "build:version": "(lerna exec -- npm run build:version) && git add . && git commit -m 'update remote version' && lerna version",
    "adapter": "commitizen init cz-conventional-changelog --save-dev --save-exact",
    "commit": "cz",
    "changelog": "conventional-changelog -p custom-config -i CHANGELOG.md -s -r 0"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "changelog": {
    "emojis": true,
    "authorName": true,
    "authorEmail": true
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "chalk": "^4.1.0",
    "commitizen": "^4.2.1",
    "conventional-changelog": "^3.1.23",
    "conventional-changelog-cli": "^2.1.0",
    "conventional-changelog-custom-config": "^0.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^4.3.0",
    "json-templater": "^1.2.0",
    "lerna": "^3.22.1",
    "lerna-changelog": "^1.0.1",
    "minimist": "^1.2.5",
    "uppercamelcase": "^3.0.0",
    "validate-commit-msg": "^2.14.0"
  },
  "dependencies": {
    "element-ui": "^2.13.2",
    "view-design": "^4.3.2",
    "vue": "^2.6.12"
  }
}
